#:import Clipboard kivy.core.clipboard.Clipboard
Screen:
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        padding: "10dp"
        adaptive_size: True

        MDLabel:
            text: "Password Generator"
            id: title
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            halign: "center"
            font_style: "H6"
            bold: True
            size_hint: (0.75, .25)

        MDTextField:
            id: text_field_input
            spacing: dp(8)
            hint_text: "Length of new password         "
            mode: "rectangle"
            pos_hint: {'center_x': 0.5, 'center_y': .5}
            size_hint: (0.8, .11)
            input_filter: "int"
            required: True
            helper_text_mode: "on_error"
            helper_text: "Enter a number"

        MDLabel:
            id: password_output
            text: ""
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            halign: "center"
            size_hint: (0.75, .25)

        BoxLayout:
            orientation: "horizontal"
            size_hint: (1, .5)
            spacing: "10dp"
            padding: "10dp"
            size_hint: (1, .3)

            MDRaisedButton:
                id: generate_password_button
                text: "Generate"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: (0.75, .5)
                on_release:
                    app.generate_password(text_field_input.text)
            MDRaisedButton:
                id: copy_password_button
                text: "Copy"
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                size_hint: (0.75, .5)
                on_release:
                    Clipboard.copy(password_output.text)